<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeAutomation.App.Views.Settings.SettingsPage"
             xmlns:mvvm="clr-namespace:HomeAutomation.App.Mvvm;assembly=HomeAutomation.App"
             xmlns:settings="clr-namespace:HomeAutomation.App.Views.Settings;assembly=HomeAutomation.App"
             mvvm:ViewModelLocator.ViewModelType="{x:Type settings:SettingsPageModel}">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Path=ServerIp}" />
            <Entry Text="{Binding Path=ServerPort}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>